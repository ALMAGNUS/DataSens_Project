# Base de données MERISE (6ème source - agrégée)
DATABASE_URL=sqlite:///./semantic_pulse.db

# MinIO/S3 Data Lake
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=admin123
MINIO_BUCKET=datasens-raw

# PostgreSQL (SGBD - alternative/complément à SQLite)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=datasens
POSTGRES_USER=ds_user
POSTGRES_PASS=ds_pass

# Redis Cache
REDIS_URL=redis://localhost:6379

# APIs externes GRATUITES (Source 4)
# YouTube Data API v3 - GRATUIT jusqu'à 10,000 requêtes/jour
# Obtenir une clé : https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=votre_cle_youtube_ici

# NewsAPI - GRATUIT jusqu'à 1000 requêtes/jour
# Obtenir une clé : https://newsapi.org/register
NEWSAPI_KEY=votre_cle_newsapi_ici

# OpenWeatherMap API - GRATUIT jusqu'à 1000 requêtes/jour
# Obtenir une clé : https://openweathermap.org/api
OWM_API_KEY=votre_cle_owm_ici

# Kaggle (Source 1 - datasets CSV/DB)
# Obtenir credentials : https://www.kaggle.com/settings/account
KAGGLE_USERNAME=votre_username_kaggle
KAGGLE_KEY=votre_cle_kaggle

# GDELT (Source 3 - Big Data) - Pas de clé nécessaire
GDELT_BASE=http://data.gdeltproject.org/gkg/

# Configuration web scraping (Source 5)
SCRAPING_DELAY=1.0
SCRAPING_MAX_RETRIES=3

# Ollama (IA locale GRATUITE)
OLLAMA_HOST=localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Modèles IA GRATUITS
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMOTION_MODEL=j-hartmann/emotion-english-distilroberta-base

# Traitement des données
BATCH_SIZE=1000
MAX_TEXT_LENGTH=512

# IMPORTANT: AUCUNE CLÉ PAYANTE UTILISÉE
# OpenAI, Anthropic, etc. sont EXCLUS du projet
